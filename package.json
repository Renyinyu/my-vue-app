      "prettier --write",
      "eslint --fix",
      "stylelint --fix"
    ],
    "*.{html,vue,scss}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
